@model MusicWeb.Models.Album

@{
    ViewBag.Title = "XoaAlbum";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xác Nhận Xóa Thông Tin Album</h2>

<h3>Bạn có chắc muốn xóa không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Album:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenAlbum)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <p></p>
            <input type="submit" value="Xác Nhận" class="btn btn-danger" /> |
            <a class="btn btn-info" href="@Url.Action("DSAlbum", "Admin")">Quay về</a>
        </div>
    }
</div>
