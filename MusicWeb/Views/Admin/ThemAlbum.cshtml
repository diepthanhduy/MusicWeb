@model MusicWeb.Models.Album

@{
    ViewBag.Title = "ThemAlbum";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm Album</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

