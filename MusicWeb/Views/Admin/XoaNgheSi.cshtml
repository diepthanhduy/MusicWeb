@model MusicWeb.Models.NgheSi

@{
    ViewBag.Title = "XoaNgheSi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xác Nhận Xóa Thông Tin Nghệ Sĩ</h2>

<h3>Bạn có chắc muốn xóa không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Nghệ Sĩ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNgheSi)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <p></p>
            <input type="submit" value="Xác Nhận" class="btn btn-danger" /> |
            <a class="btn btn-info" href="@Url.Action("DSNgheSi", "Admin")">Quay về</a>
        </div>
    }
</div>
