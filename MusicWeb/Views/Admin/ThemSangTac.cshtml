@model MusicWeb.Models.SangTac

@{
    ViewBag.Title = "ThemSangTac";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm Nghệ Sĩ Sáng Tác</h2>

@using (Html.BeginForm())
{
