@model MusicWeb.Models.SangTac

@{
    ViewBag.Title = "ThemSangTac";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm Tác Giả</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <td>
                Tên Tác Giả:
            </td>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNguoiST, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNguoiST, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <p> </p>
                <input type="submit" value="Create" class="btn btn-danger" />
                <a class="btn btn-info" href="@Url.Action("DSSangTac", "Admin")">Quay về danh sách tác giả</a>
            </div>
        </div>
    </div>
}
