@model MusicWeb.Models.Nhac

@{
    ViewBag.Title = "Sua";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>SỬA THÔNG TIN BÀI HÁT</h2>


@using (Html.BeginForm("Sua", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaBaiNhac)

        <div class="form-group">
            @Html.LabelFor(model => model.TenNhac, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div style="font:18px; padding: 5px 0 0 5px"> @ViewBag.MaBaiNhac </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgayCN, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayCN)
                @Html.ValidationMessageFor(model => model.NgayCN)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaNgheSi, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaNgheSi")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaLoai, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaLoai")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaSangTac, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaSangTac")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaAlbum, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaAlbum")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FileNhac, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Chọn file nhạc mới<br />
                <input type="file" name="fileNhac" />
                <img src="@Url.Content("~/music/"+ Model.FileNhac)" width="70px" /> (File hiện tại)
                @*Thong bao trùng*@
                @ViewBag.Thongbao1
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FileAnh, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Chọn file ảnh mới<br />
                <input type="file" name="fileAnh" />
                <img src="@Url.Content("~/img/"+ Model.FileAnh)" width="70px" /> (Ảnh hiện tại)
                @*Thong bao trùng*@
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay Lại", "Nhac")
</div>

