@model MusicWeb.Models.Nhac

@{
    ViewBag.Title = "Sua";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>SỬA THÔNG TIN BÀI HÁT</h2>


@using (Html.BeginForm("Sua", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MaBaiNhac)
        <div class="form-group">
            <td>
                Tên Bài Hát:
            </td>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNhac)
                @Html.ValidationMessageFor(model => model.TenNhac)
            </div>
        </div>
        <div class="form-group">
            <td>
                Ngày Cập Nhật:
            </td>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayCN)
                @Html.ValidationMessageFor(model => model.NgayCN)
            </div>
        </div>

        <div class="form-group">
            <td>
                Nghệ Sĩ:
            </td>
            <div class="col-md-10">
                @Html.DropDownList("MaNgheSi")
            </div>
        </div>

        <div class="form-group">
            <td>
                Thể Loại Nhạc:
            </td>
            <div class="col-md-10">
                @Html.DropDownList("MaLoai")
            </div>
        </div>

        <div class="form-group">
            <td>
                Tác Giả:
            </td>
            <div class="col-md-10">
                @Html.DropDownList("MaSangTac")
            </div>
        </div>

        <div class="form-group">
            <td>
                Album:
            </td>
            <div class="col-md-10">
                @Html.DropDownList("MaAlbum")
            </div>
        </div>
        <div class="form-group">
            <td>
                File Ảnh:
            </td>
            <div class="col-md-10">
                Chọn file ảnh mới<br />
                <input type="file" name="fileAnh" />
                <p></p>
                <img src="@Url.Content("~/img/"+ Model.FileAnh)" width="70px" /> (Ảnh hiện tại)
                @*Thong bao trùng*@
                @ViewBag.Thongbao
            </div>
        </div>
        <div class="form-group">
            <td>
                File Nhạc:
            </td>
            <div class="col-md-10">
                Chọn file nhạc mới<br />
                <input type="file" name="fileNhac" />
                <p> </p>
                <audio style="width:50%" controls>
                    <source src="@Url.Content("~/music/"+ Model.FileNhac)" type="audio/mp4"> (File nhạc hiện tại)
                </audio>
                @*Thong bao trùng*@
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <p> </p>
                <input type="submit" value="Lưu" class="btn btn-danger" />
                <a class="btn btn-info" href="@Url.Action("Nhac", "Admin")">Quay về danh sách nhạc</a>
            </div>
        </div>
    </div>
}

