@using MusicWeb.Models
@using PagedList.Mvc;
@model PagedList.PagedList<MusicWeb.Models.TheLoai>

@{
    ViewBag.Title = "TheLoaiNhac";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thể Loại Nhạc</h2>

<p>
    <a class="btn btn-info" href="@Url.Action("ThemLoaiNhac", "Admin")">Thêm mới thể loại nhạc</a>
</p>
<table class="table" border="1">
    <tr>
        <th style="width:150px">Mã Loại</th>
        <th style="width:150px">Tên Thể Loại</th>
        <th style="width: 150px"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoai)
            </td>
            <td>
                <a class="btn btn-info" href="@Url.Action("XoaTheLoaiNhac", "Admin", new { id = item.MaLoai })" class="lnkGetReward">Xóa</a>
            </td>
        </tr>
    }

</table>
Trang@(Model.PageCount<Model.PageNumber ? 0: Model.PageNumber)/@Model.PageCount;
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("TheLoaiNhac", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>