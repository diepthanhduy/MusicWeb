@model MusicWeb.Models.Nhac

@{
    ViewBag.Title = "Chitiet";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÔNG TIN CHI TIẾT BÀI HÁT</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Bài Hát:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNhac)
        </dd>

        <dt>
            Ngày Cập Nhật:
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.NgayCN)
        </dd>

        <dt>
            Tên Nghệ Sĩ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgheSi.TenNgheSi)
        </dd>

        <dt>
            Thể Loại Nhạc:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TheLoai.TenLoai)
        </dd>

        <dt>
            Tác Giả:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SangTac.TenNguoiST)
        </dd>

        <dt>
            Album:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Album.TenAlbum)
        </dd>

        <dt>
            Ảnh:
        </dt>

        <dd>
            <img src="@Url.Content("~/img/"+ Model.FileAnh)" width="120px" />
        </dd>

        <dt>
            Nhạc:
        </dt>

        <dd>
            <audio style="width:50%" controls>
                <source src="@Url.Content("~/music/"+ Model.FileNhac)" type="audio/mp4">
            </audio>
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-info" href="@Url.Action("Sua", "Admin", new { id = Model.MaBaiNhac })" class="lnkGetReward">Sửa</a> |
    <a class="btn btn-info" href="@Url.Action("Nhac", "Admin")">Quay về danh sách nhạc</a>
</div>
